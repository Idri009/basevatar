generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Setting {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String
  value String
}

model Output {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  opensea_url  String
  day          Int
  colors       String[]
  theme        String
  contributors String[]
  mint_count   Int      @default(0)
  end_time     DateTime @db.Timestamp
  created_at   DateTime @default(now()) @db.Date
  isDeleted    Boolean  @default(false)
}

enum VoteType {
  color
  theme
}

model Vote {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  count     Int      @default(0)
  date      DateTime @default(now()) @db.Date
  type      VoteType
  value     String[]
  day       Int
  isDeleted Boolean  @default(false)
}

model VoteLog {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  wallet     String
  vote_id    String
  hash       String
  created_at DateTime @default(now()) @db.Date
}

model Image {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  day        Int
  address    String
  url        String
  isReviewed Boolean  @default(false)
  isSelected Boolean  @default(false)
  created_at DateTime @default(now()) @db.Date
  isDeleted  Boolean  @default(false)
}
