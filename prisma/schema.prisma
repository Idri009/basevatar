generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model settings {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String
  value String
}

model faq {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  content String
  order   Int
  title   String
}

model gallery {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  colors      String[]
  created_at  DateTime @db.Date
  end_date    String
  image_url   String
  opensea_url String
  title       String
}

enum voteTypes {
  color
  theme
}

model votes {
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  count Int       @default(0)
  date  DateTime  @db.Date
  type  voteTypes
  value String[]
  day   Int
}

model voteLogs {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  wallet     String
  vote_id    String
  created_at DateTime @default(now()) @db.Date
}
