generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model settings {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String
  value String
}

model gallery {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  colors      String[]
  created_at  DateTime @db.Date
  end_date    String
  image_url   String
  opensea_url String
  title       String
  isDeleted   Boolean  @default(false)
}

enum voteTypes {
  color
  theme
}

model votes {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  count     Int       @default(0)
  date      DateTime  @db.Date
  type      voteTypes
  value     String[]
  day       Int
  isDeleted Boolean   @default(false)
}

model voteLogs {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  wallet     String
  vote_id    String
  hash       String
  created_at DateTime @default(now()) @db.Date
}

model images {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  day        Int
  address    String
  url        String
  isSelected Boolean  @default(false)
  created_at DateTime @default(now()) @db.Date
  isDeleted  Boolean  @default(false)
}
