{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "dev": {
            "dependsOn": ["^db:generate"],
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "db:generate": {
            "dependsOn": ["^db:generate"],
            "cache": false
        },
        "db:seed": {
            "dependsOn": ["^db:seed"],
            "cache": false
        },
        "typecheck": {
            "dependsOn": ["@basevatar/vitest-config#build", "db:generate", "^db:generate"]
        },
        "lint": {
            "dependsOn": []
        },
        "clean": {
            "cache": false
        },
        "test": {
            "dependsOn": ["transit", "@basevatar/vitest-config#build"],
            "outputs": ["coverage.json"]
        },
        "test:watch": {
            "dependsOn": ["transit", "@basevatar/vitest-config#build"],
            "cache": false,
            "persistent": true
        },
        "test:coverage": {
            "dependsOn": ["transit", "@basevatar/vitest-config#build"],
            "outputs": ["coverage.json"]
        },
        "merge-json-reports": {
            "inputs": ["coverage/raw/**"],
            "outputs": ["coverage/merged/**"]
        },
        "report": {
            "dependsOn": ["merge-json-reports"],
            "inputs": ["coverage/merge"],
            "outputs": ["coverage/report/**"]
        },
        "view-report": {
            "cache": false,
            "persistent": true
        },
        "transit": {
            "dependsOn": ["^transit"]
        }
    }
}
